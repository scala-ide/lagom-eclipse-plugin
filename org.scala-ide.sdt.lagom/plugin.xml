<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

  <extension point = "org.eclipse.debug.core.launchConfigurationTypes">
  
    <launchConfigurationType
           id="scalaide.lagom"
           delegate="org.scalaide.lagom.launching.LagomLaunchDelegate"
           delegateDescription="The Lagom Launcher supports running and debugging Lagom microservices."
           delegateName="Lagom Launcher"
           modes="run, debug"
           name="Lagom"
           public="true"
           sourceLocatorId="org.eclipse.jdt.launching.sourceLocator.JavaSourceLookupDirector"
           sourcePathComputerId="org.eclipse.jdt.launching.sourceLookup.javaSourcePathComputer">
    </launchConfigurationType>
  
  </extension>
  
  <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
  
    <launchConfigurationTypeImage
           configTypeID="scalaide.lagom"
           icon="icons/full/etool16/littlelagom.png"
           id="scalaide.lagom.image">
    </launchConfigurationTypeImage>
  
  </extension>
  
  <extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
    
    <launchConfigurationTabGroup
        type="scala.scalatest"
        class="scala.tools.eclipse.scalatest.launching.ScalaTestTabGroup"
        id="scala.scalatest.tabGroup">
    </launchConfigurationTabGroup>
    
  </extension>
  
  <extension point="org.eclipse.core.expressions.propertyTesters">
    
      <propertyTester
           class="org.scalaide.lagom.launching.LagomLaunchableTester"
           id="org.scalaide.lagom.launching.LagomLaunchableTester"
           namespace="org.scalaide.lagom.launching"
           properties="hasLagomLoader"
           type="org.eclipse.core.runtime.IAdaptable"/>  
    
  </extension>
  
  <extension point="org.eclipse.debug.ui.launchShortcuts">
    
    <shortcut
        class="org.scalaide.lagom.launching.LagomLaunchShortcut"
        icon="icons/full/obj16/scu_obj.gif"
        id="org.eclipse.shortcut.scalaide.lagom"
        label="%LagomLaunchShortcut.label"
        modes="run,debug">
      <contextualLaunch>
        <enablement>
          <with variable="selection">
            <count value="1" />
            <iterate>
              <test property="org.scalaide.lagom.launching.hasLagomLoader"/>
            </iterate>
          </with>
        </enablement>
      </contextualLaunch>
    </shortcut>
    
  </extension>
  
  <extension
       id="scala.tools.eclipse.consoleView"
       point="org.eclipse.ui.views">
     
    <view name="ScalaTest"
           icon="icons/full/etool16/scalatest.gif"
           category="org.scala-ide.sdt.core.viewCategory"
           fastViewWidthRatio="0.40"
           class="scala.tools.eclipse.scalatest.ui.ScalaTestRunnerViewPart"
           id="scala.tools.eclipse.scalatest.ui.ScalaTestResultView">
    </view>
       
  </extension>

</plugin>